<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="java.util.ArrayList" />

        <variable
            name="memberType"
            type="ArrayList&lt;String&gt;" />

        <variable
            name="memberDesignationList"
            type="ArrayList&lt;String&gt;" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:includeFontPadding="false"
                android:text="@string/register"
                android:textColor="@color/gray_600"
                android:textSize="28sp"
                app:fontFamily="@font/sarabun_extrabold" />

            <RelativeLayout
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:layout_marginTop="46dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_profile_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_placeholder" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/edit_profile_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="1dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_round_camera_alt"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AajeevikaCLF.TextInputLayout"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="20dp"
                android:hint="@string/sign_up_as">

                <AutoCompleteTextView
                    android:id="@+id/input_user_type"
                    style="@style/AajeevikaCLF.EditText"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/dropdown_icon"
                    android:focusable="false"
                    android:importantForAutofill="no"
                    android:inputType="textNoSuggestions"
                    android:paddingEnd="10dp"
                    app:dropDownMenu="@{ memberType }"
                    tools:ignore="Autofill,LabelFor,RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AajeevikaCLF.TextInputLayout"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="20dp"
                android:hint="@string/name_of_organisation_required">

                <EditText
                    android:id="@+id/input_name_of_organisation"
                    style="@style/AajeevikaCLF.EditText"
                    android:drawableEnd="@drawable/organisation_name_icon"
                    android:inputType="text"
                    android:paddingEnd="10dp"
                    tools:ignore="Autofill,LabelFor,RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AajeevikaCLF.TextInputLayout"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="20dp"
                android:hint="@string/member_name_required">

                <EditText
                    android:id="@+id/input_member_name"
                    style="@style/AajeevikaCLF.EditText"
                    android:drawableEnd="@drawable/member_name_icon"
                    android:inputType="text"
                    android:paddingEnd="10dp"
                    tools:ignore="Autofill,LabelFor,RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AajeevikaCLF.TextInputLayout"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="20dp"
                android:hint="@string/member_designation_required">

                <AutoCompleteTextView
                    android:id="@+id/input_member_designation"
                    style="@style/AajeevikaCLF.EditText"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/dropdown_icon"
                    android:focusable="false"
                    android:importantForAutofill="no"
                    android:inputType="textNoSuggestions"
                    android:paddingEnd="10dp"
                    app:dropDownMenu="@{ memberDesignationList }"
                    tools:ignore="Autofill,LabelFor,RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AajeevikaCLF.TextInputLayout"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="20dp"
                android:hint="@string/member_id">

                <EditText
                    android:id="@+id/input_member_id"
                    style="@style/AajeevikaCLF.EditText"
                    android:digits="0123456789"
                    android:drawableEnd="@drawable/member_id_icon"
                    android:inputType="number"
                    android:paddingEnd="10dp"
                    app:disableSpace="@{ true }"
                    tools:ignore="Autofill,LabelFor,RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AajeevikaCLF.TextInputLayout"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="20dp"
                android:hint="@string/email_id_required">

                <EditText
                    android:id="@+id/input_email"
                    style="@style/AajeevikaCLF.EditText"
                    android:drawableEnd="@drawable/email_icon"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="10dp"
                    app:disableSpace="@{ true }"
                    tools:ignore="Autofill,LabelFor,RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AajeevikaCLF.TextInputLayout"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="20dp"
                android:hint="@string/mobile_no_required">

                <EditText
                    android:id="@+id/input_mobile_number"
                    style="@style/AajeevikaCLF.EditText"
                    android:digits="0123456789"
                    android:drawableEnd="@drawable/mobile_icon"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingEnd="10dp"
                    app:disableSpace="@{ true }"
                    tools:ignore="Autofill,LabelFor,RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AajeevikaCLF.TextInputLayout"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="20dp"
                android:hint="@string/password_required"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/gray_600">

                <EditText
                    android:id="@+id/input_password"
                    style="@style/AajeevikaCLF.EditText"
                    android:inputType="textPassword"
                    app:disableSpace="@{ true }"
                    tools:ignore="Autofill,LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AajeevikaCLF.TextInputLayout"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="20dp"
                android:hint="@string/confirm_password_required"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/gray_600">

                <EditText
                    android:id="@+id/input_confirm_password"
                    style="@style/AajeevikaCLF.EditText"
                    android:inputType="textPassword"
                    app:disableSpace="@{ true }"
                    tools:ignore="Autofill,LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="56dp"
                android:gravity="top"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/register_agreement_checkbox"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:button="@drawable/checkbox_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginStart="10dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/register_agreement_checkbox"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setRegisterAgreementText="@{ true }"
                    tools:text="@string/register_agreement" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/sign_up_btn"
                style="@style/AajeevikaCLF.ActiveButton.Solid"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="48dp"
                android:text="@string/sign_up" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/already_have_an_account"
                    android:textColor="@color/gray_600"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/click_to_login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:padding="4dp"
                    android:text="@string/click_to_login"
                    android:textColor="@color/orange"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>