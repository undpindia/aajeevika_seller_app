<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.ArrayList" />

        <variable
            name="country"
            type="String" />

        <variable
            name="state"
            type="String" />

        <variable
            name="districtList"
            type="ArrayList&lt;String&gt;" />

        <variable
            name="blockList"
            type="ArrayList&lt;String&gt;" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:paddingHorizontal="16dp"
            android:src="@drawable/back_icon"
            tools:ignore="ContentDescription" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/document"
                    android:textColor="@color/gray_600"
                    android:textSize="28sp"
                    app:fontFamily="@font/sarabun_extrabold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:includeFontPadding="false"
                    android:text="@string/please_enter_following_details"
                    android:textColor="@color/gray_600"
                    android:textSize="16sp" />

                <include
                    android:id="@+id/aadhar_card"
                    layout="@layout/view_aadhar_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="10dp" />

                <include
                    android:id="@+id/pan_card"
                    layout="@layout/view_pan_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="10dp" />

                <include
                    android:id="@+id/brn_card"
                    layout="@layout/view_brn_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="10dp" />

                <include
                    android:id="@+id/registered_address"
                    layout="@layout/view_registered_address_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="10dp"
                    app:blockList="@{ blockList }"
                    app:country="@{ country }"
                    app:districtList="@{ districtList }"
                    app:state="@{ state }" />

                <TextView
                    android:id="@+id/verify_btn"
                    style="@style/AajeevikaCLF.ActiveButton.Solid"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="44dp"
                    android:text="@string/verify" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>