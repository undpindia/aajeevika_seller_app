<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="message"
            type="String" />

        <variable
            name="positive"
            type="String" />

        <variable
            name="negative"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@{ message }"
                android:textColor="@color/gray_600"
                android:textSize="20sp"
                app:fontFamily="@font/sarabun_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/negative_btn"
                    style="@style/AajeevikaCLF.ActiveButton.Solid"
                    android:layout_width="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/solid_gray_50_r8"
                    android:text="@{ negative }"
                    android:textColor="@color/gray_600"
                    android:textSize="16sp"
                    android:visibility="@{ negative == null? View.GONE: View.VISIBLE, default=gone }" />

                <TextView
                    android:id="@+id/positive_btn"
                    style="@style/AajeevikaCLF.ActiveButton.Solid"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/solid_green_r8"
                    android:text="@{ positive }"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>