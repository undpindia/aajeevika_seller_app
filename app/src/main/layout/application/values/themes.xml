<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AajeevikaCLF" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/green</item>

        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/orange</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="fontFamily">@font/sarabun_regular</item>
    </style>

    <style name="Theme.AajeevikaCLF.DarkStatusBar">
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.AajeevikaCLF.OffWhite">
        <item name="android:statusBarColor">@color/gray_50</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AajeevikaCLF.ActiveButton" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">12sp</item>
        <item name="fontFamily">@font/sarabun_medium</item>
    </style>

    <style name="AajeevikaCLF.ActiveButton.Solid" parent="AajeevikaCLF.ActiveButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/solid_orange_r8</item>
    </style>

    <style name="AajeevikaCLF.ActiveButton.Outline" parent="AajeevikaCLF.ActiveButton">
        <item name="android:textColor">@color/orange</item>
        <item name="android:background">@drawable/outline_w1_orange_r8</item>
    </style>

    <style name="AajeevikaCLF.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="hintTextColor">@color/gray_400</item>
        <item name="android:textColor">@color/gray_400</item>
        <item name="fontFamily">@font/sarabun_regular</item>
        <item name="hintTextAppearance">@style/HintTheme</item>

        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>

        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/text_input_layout_box_stroke_color</item>
    </style>

    <style name="AajeevikaCLF.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>

        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/sarabun_regular</item>
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:textCursorDrawable">@drawable/solid_w2_gray_400</item>

        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="HintTheme">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabLayoutTextAppearance">
        <item name="fontFamily">@font/sarabun_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>